{
  "name": "forum-api",
  "version": "1.0.0",
  "description": "Forum API",
  "main": "src/app.js",
  "scripts": {
    "start": "node -r dotenv/config src/app.js",
    "start:dev": "nodemon -r dotenv/config src/app.js",
    "start:prod": "node src/app.js",
    "docs": "jsdoc --readme README.md -c jsdoc.json -d docs -r src",
    "lint": "eslint .",
    "test": "jest --setupFiles dotenv/config -i",
    "test:ci": "jest",
    "test:watch:change": "jest --watch --setupFiles dotenv/config -i",
    "test:watch": "jest --watchAll --coverage --setupFiles dotenv/config -i",
    "migrate": "node-pg-migrate",
    "migrate:test": "node-pg-migrate --config-file=config/database/test.json"
  },
  "keywords": [
    "forum",
    "web",
    "api"
  ],
  "author": "Bervianto Leo Pratama",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "^20.2.1",
    "@hapi/jwt": "^2.1.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^14.2.0",
    "instances-container": "^2.0.5",
    "nanoid": "^3.2.0",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "eslint": "^8.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.4.7",
    "jsdoc": "^3.6.10",
    "node-pg-migrate": "^6.2.1",
    "nodemon": "^2.0.15"
  }
}
